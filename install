#!/bin/bash

sudo cp -r scripts/* /usr/local/bin/

cp .bashrc ~
cp .bash_profile ~
cp .zshrc ~
cp .vimrc ~
cp ascii/* ~

cp -r .themes ~
cp -r .icons ~
cp -r .fonts ~
cp -r .ssh ~
cp -r .config ~

unzip -qo ~/.themes/dracula.zip -d ~/.themes/
unzip -qo ~/.icons/dracula.zip -d ~/.icons/
unzip -qo ~/fonts/jetbrainsmono.zip -d ~/.local/share/
unzip -qo ~/fonts/hack.zip -d ~/local/share/fonts/ttf/

sudo tee -a /etc/environment <<< "export QT_QPA_PLATFORMTHEME=qt5ct"
sudo tee -a /etc/environment <<< "export QT_QPA_PLATFORM=wayland"
